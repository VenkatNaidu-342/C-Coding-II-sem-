#include <stdio.h>

#define SIZE 50

void deleteElement(int arr[], int len, int pos) {
    if (pos >= 0 && pos < len) {
        for (int i = pos; i < len - 1; i++) {
            arr[i] = arr[i + 1];
        }
        len--;
    }
}

void printArray(int arr[], int len) {
    for (int i = 0; i < len; i++) {
        printf("%d ", arr[i]);
    }
}

int main() {
    int arr[] = {1, 2, 3, 4, 5, 6};
    int len = sizeof(arr) / sizeof(int);
    int pos;
    
    int x = sizeof(arr);
    int y = x / sizeof(int);
    printf("\n\n%d  %d\n\n", x, y);
    
    scanf("%d", &pos); // 0-5
    
    deleteElement(arr, len, pos);
    
    printArray(arr, len);
    
    return 0;
}
